---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
	src: ImageMetadata;
	alt: string;
	caption: string;
}

const { src, alt, caption } = Astro.props;
---

<figure class="my-8">
	<Image 
		src={src} 
		alt={alt}
		class="rounded-xl shadow-lg mx-auto" 
	/>
	<figcaption class="text-center text-gray-600 mt-3 italic">
		<span class="text-sm">{caption}</span>
	</figcaption>
</figure>

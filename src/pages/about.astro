---
import { Image } from "astro:assets";
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import AboutHeroImage from "../assets/ghost-images/valery-tenevoy-i1y9j2dc88s-unsplash-2.jpg";
import { SITE_TITLE, SITE_AUTHOR } from "../consts";
---

<!doctype html>
<html lang="fr">
	<head>
		<BaseHead
			title={`À propos - ${SITE_TITLE}`}
			description="Présentation du blog et de son auteur"
		/>
	</head>
	<body class="min-h-screen bg-gray-50">
		<Header />
		<main class="max-w-4xl mx-auto px-4 py-12">
			<article class="bg-white border border-gray-200">
				<div class="w-full h-64 md:h-80 overflow-hidden">
					<Image
						width={1020}
						height={510}
						src={AboutHeroImage}
						alt="Image de présentation du blog"
						class="w-full h-full object-cover"
					/>
				</div>
				<div class="p-6 md:p-8">
					<header class="mb-8">
						<h1
							class="text-3xl md:text-4xl font-bold mb-4 text-black"
						>
							À propos
						</h1>
						<hr class="border-gray-200 mb-6" />
					</header>
					<div class="prose prose-lg max-w-none">
						<p>
							Blog de <strong>{SITE_AUTHOR}</strong>. Politique,
							économie, technologie.
						</p>

						<h2>Thèmes</h2>
						<ul>
							<li>Intelligence artificielle</li>
							<li>Démocratie et souveraineté</li>
							<li>Éducation et esprit critique</li>
							<li>Libéralisme</li>
						</ul>
					</div>
				</div>
			</article>
			<nav class="mt-12">
				<a
					href="/"
					class="text-accent hover:text-accent-dark font-medium"
					>← Retour à l'accueil</a
				>
			</nav>
		</main>
		<Footer />
	</body>
</html>

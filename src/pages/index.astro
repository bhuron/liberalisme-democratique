---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { SITE_DESCRIPTION, SITE_TITLE, SITE_AUTHOR } from '../consts';

const allPosts = await getCollection('blog');
const featuredPosts = allPosts
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<!doctype html>
<html lang="fr">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="min-h-screen bg-gradient-gray">
		<Header />
		<main class="max-w-6xl mx-auto px-4 py-12">
			<!-- Hero section -->
			<section class="text-center mb-16">
				<h1 class="text-5xl md:text-6xl font-bold mb-6 text-black">{SITE_TITLE}</h1>
				<p class="text-xl text-gray-dark max-w-2xl mx-auto mb-8">
					{SITE_DESCRIPTION}
				</p>
				<div class="flex flex-wrap justify-center gap-4">
					<a
						href="/blog"
						class="px-6 py-3 bg-accent text-white font-medium rounded-lg hover:bg-accent-dark transition-colors"
					>
						Voir tous les articles
					</a>
					<a
						href="/about"
						class="px-6 py-3 border border-accent text-accent font-medium rounded-lg hover:bg-accent hover:text-white transition-colors"
					>
						À propos
					</a>
				</div>
			</section>

			<!-- Featured posts -->
			<section class="mb-16">
				<h2 class="text-3xl font-bold mb-8 text-black">Articles récents</h2>
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
					{
						featuredPosts.map((post) => {
							const imageSrc = post.data.image?.src;
							const imageAlt = post.data.image?.alt || '';
							return (
								<article class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
									<a href={`/blog/${post.id}/`} class="block no-underline">
										{imageSrc && (
											<div class="w-full h-48 overflow-hidden">
												<Image
													width={400}
													height={200}
													src={imageSrc}
													alt={imageAlt}
													class="w-full h-full object-cover"
												/>
											</div>
										)}
										<div class="p-6">
											<h3 class="text-lg font-bold mb-2 text-black hover:text-accent transition-colors">
												{post.data.title}
											</h3>
											<p class="text-gray mb-3 text-sm">
												<FormattedDate date={post.data.pubDate} />
												{post.data.author && ` • ${post.data.author}`}
											</p>
											<p class="text-gray-dark mb-0">{post.data.description}</p>
										</div>
									</a>
								</article>
							)
						})
					}
				</div>
				{featuredPosts.length === 0 ? (
					<p class="text-center text-gray py-12">Aucun article publié pour le moment.</p>
				) : (
					<div class="text-center mt-10">
						<a
							href="/blog"
							class="inline-flex items-center text-accent hover:text-accent-dark font-medium"
						>
							Voir tous les articles
							<svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
							</svg>
						</a>
					</div>
				)}
			</section>

			<!-- About preview -->
			<section class="bg-white rounded-lg shadow-lg p-8">
				<h2 class="text-3xl font-bold mb-4 text-black">À propos</h2>
				<p class="text-gray-dark mb-4">
					Ce blog explore les idées du libéralisme politique et de la démocratie, avec des analyses,
					des réflexions et des discussions sur les institutions, les droits individuels et la gouvernance.
				</p>
				<p class="text-gray-dark mb-6">
					Écrit par {SITE_AUTHOR}, ce site vise à partager des perspectives éclairées et à encourager
					le débat constructif.
				</p>
				<a href="/about" class="text-accent hover:text-accent-dark font-medium">
					En savoir plus →
				</a>
			</section>
		</main>
		<Footer />
	</body>
</html>
